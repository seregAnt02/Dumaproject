            $('#img_modal').hide();

            //$(body).css('background-color', 'bisque');

        });

    });

    $('.ref-a-check-box-policy').click(function () {

        var hostname = $(window.location).attr('hostname');

        var url = hostname == "localhost" ? "/Policy/PrivacyPolicy" : "/duma/Policy/PrivacyPolicy";

