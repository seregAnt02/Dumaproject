@model duma.Models.Contact
    @using duma.Models

    @{
        <title>обратная связь</title>
        //Layout = "~/Views/Shared/_Layout.cshtml";
        ViewBag.Title = "Место нахождения";            
        var pricetotal = @ViewBag.priceTotal;
        var price = @ViewBag.PriceModel as Price;
    }
    <style>

        input.wide-control {

    width: 300px;height: 50px

    }

        .lab-name-control{                        

            padding:10px

        }
        .text-box-wishes{

            width: 710px; height: 100px;
            max-width:350px

        }   
        
        .error{

            color:black;            
        }

        input.error{
            background-color:salmon
        }

        .img-modal-loading{

            margin-top:-250px;
        }
    </style>    
    
    <div id="bodyContact">

        <div id="formData">

            <div class="container">

                <h3 style="text-align:center">Заказать расчет</h3>
                Если у Вас имеются какие-либо пожелания по Вашей системе, например управление мультирумом или видеонаблюдением, то Вы можете написать об этом в специальном окне "Ваши пожелания".
                Далее просто нажмите кнопку "Отправить заявку" и наш специалист свяжется с Вами в ближайшее время.


                <div style="margin-top:35px" class="function-group">

                    <ul class="col-md-5 col-md-offset-1">

                        <li>@Html.Label("Area", "Общая площадь дома или квартиры (м2)"): @price.Area</li>
                        <li>@Html.Label("Lighting", "Освещение"): @price.Lighting</li>
                        <li>@Html.Label("Fan", "Система вентиляции"): @price.Fan</li>
                        <li>@Html.Label("Movements", "Количество датчиков движения и присутствия"): @price.Movements</li>
                        <li>@Html.Label("Management", "Управление шторами, дверьми, воротами"): @price.Management</li>

                    </ul>

                    <ul class="col-md-4 col-md-offset-1">

                        <li>@Html.Label("Rooms", "Количество комнат"): @price.Rooms</li>
                        <li>@Html.Label("Heatings", "Система отопления"): @price.Heatings</li>
                        <li>@Html.Label("Conditioner", "Управление кондиционерами"): @price.Conditioner</li>
                        <li>@Html.Label("Fireman", "Количество пожарных датчиков"): @price.Fireman</li>
                        <li>@Html.Label("Protection", "Защита от протечек"): @price.Protection</li>

                    </ul>

                </div>

                <!--<h5 style="font:bold 12pt sans-serif;text-align:center;color:blue" class="col-md-4 col-md-offset-4">Итого: @pricetotal руб.</h5>-->

                <form class="form-contact">

                    <div style="margin-top:35px" class="col-md-4 col-md-offset-4">

                        <div style="text-align:center">

                            <label for="name" class="col-md-2" style="color:blue">Имя:</label>

                            <input id="id_name" name="name" class="form-control col-md-offset-4" type="text" /> <br />

                            <label for="telephone" class="col-md-2" style="color:blue">Телефон:</label>

                            <input id="id_telephone" name="telephone" class="form-control col-md-offset-4 phone-field" /> <br />

                            <label for="emailadress" class="col-md-3" style="color:blue">E-mail:</label>

                            <input id="id_emailadress" name="emailadress" class="form-control col-md-offset-4" />

                        </div><br />

                        <div style="text-align:center">

                            <!--<input type="hidden" value="ViewBag.BookId" name="BookId" />-->
                            <p>

                                @Html.LabelFor(m => m.Wishes, "Ваши пожелания") <br />
                                @Html.TextAreaFor(m => m.Wishes, new { @class = "text-box-wishes" }) <br /><br />


                                <label style="font-size:10px;color:brown">*Расширения файла: .xls, .xlsx, .docx, .pptx, .pub</label>

                                <input id="download_file" name="urlupload" type="file" accept=".xls,.xlsx,.docx,.pptx,.pub" /> <br />

                                <input class="check_box-soglasie" type="checkbox" />

                                <label><a style="font-size:10px" class="ref-a-check-box-soglasie">Ввод данных подтверждает ваше согласие на обработку персональных данных.</a></label> <br />

                                <input class="check_box-privacy-policy" type="checkbox" />

                                <label><a style="font-size:10px" class="ref-a-check-box-privacypolicy">Ввод данных подтверждает ваше согласие с политикой конфиденциальности.</a></label> <br />

                                <input type="button" value="Отправить заявку" style="color:dodgerblue" id="formButton" disabled />

                            </p>

                            <!--<input id="priceTotal" type="hidden" name="pricetotal" value="@pricetotal" />-->

                        </div>

                    </div>

                    @Html.Hidden("Area", @price.Area)

                    @Html.Hidden("Lighting", @price.Lighting)

                    @Html.Hidden("Fan", @price.Lighting)

                    @Html.Hidden("Movements", @price.Lighting)

                    @Html.Hidden("Management", @price.Lighting)

                    @Html.Hidden("Rooms", @price.Rooms)

                    @Html.Hidden("Heatings", @price.Lighting)

                    @Html.Hidden("Conditioner", @price.Lighting)

                    @Html.Hidden("Fireman", @price.Lighting)

                    @Html.Hidden("Protection", @price.Lighting)

                </form>

            </div>


        </div>
        @Scripts.Render("~/Scripts/js/js_contact.js")
    </div>
